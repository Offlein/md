<!DOCTYPE html>
<html ng-app="debateApp">
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        {% block stylesheets %}
			<link href="{{ asset('/css/main.css') }}" type="text/css" rel="stylesheet" />
		{% endblock %}

        <!--[if lte IE 8]>
        <script>
            // The ieshiv takes care of our ui.directives, bootstrap module directives and
            // AngularJS's ng-view, ng-include, ng-pluralize and ng-switch directives.
            // However, IF you have custom directives (yours or someone else's) then
            // enumerate the list of tags in window.myCustomTags

            window.myCustomTags = [ 'yourDirective', 'somebodyElsesDirective' ]; // optional
        </script>
        <script src="build/angular-ui-ieshiv.js"></script>
        <![endif]-->
    </head>
    <body>
        {% if app.session.hasFlash('notice') %}
            <div class="flash-notice">
                {{ app.session.flash('notice') }}
            </div>
        {% endif %}
        <div id="headerbar" ng-controller="appFrameCtrl">
            <div id="header">
                <div id="logo"><img src="/bundles/mddebate/images/logo.png" title="Jack DeMaster's DeMaster Debaters" alt="Jack DeMaster's DeMaster Debaters" /></div>
                <div id="growl" ui-toggle="growlState">{[{ growlMessage }]}</div>
            </div>
        </div>
        <div id="page-outer">
            <div id="page">
                <div ng-view>{% block body %}{% endblock %}</div>
            </div>
        </div>
        {% block javascripts %}
            <!-- Footer Javascripts -->
        {% endblock %}
    </body>
</html>
